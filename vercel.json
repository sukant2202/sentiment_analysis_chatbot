{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/styles.css",
      "dest": "/templates/styles.css"
    },
    {
      "src": "/script.js",
      "dest": "/templates/script.js"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "PORT": "5000",
    "NLTK_DATA_PATH": "/tmp/nltk_data"
  }
}
